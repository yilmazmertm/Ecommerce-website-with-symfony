<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="section-block" id="basicform">
            <h3 class="section-title">Basic Category From</h3>
        </div>
        <div class="card">
            <h5 class="card-header">Basic Form</h5>
            <div class="card-body">
                <form name="category" method = "post">
                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Parent ID</label>
                                <select id="category_parentid" name="category[parentid]" class="form-control">
                                    <option value = "0"> Main Category </option>
                                        {% for cat in categories %}
                                        <option value= "{{cat.id}}" {{ cat.id == category.parentid ? 'Selected' : ''}} > {{cat.title}} </option>
                                        {% endfor %}
                                </select>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail">Category Name</label>
                        <input id="category_title" name="category[title]" type="text" value = "{{ category.title}}" required = "required" class="form-control">
                        <p>This is the Category Name </p>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Description</label>
                        <input id="category_description" name="category[description]" type="text" value = "{{ category.description }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="exampleInput">Category Keywords</label>
                            <input id="category_keywords" name="category[keywords]" type="text" value = "{{ category.keywords }}"  class="form-control">
                                <p>This is Keywords</p>
                    </div>
                    <div class="custom-file mb-3">
                        <input type="file" class="custom-file-input" id="category_image" name="category[image]">
                        <label class="custom-file-label" for="customFile">Ä°mage</label>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Status</label>
                        <select class="form-control" id="category_status" name="category[status]" >
                            <option> {{category.status}} </option>
                            <option> True </option>
                            <option> False </option>
                        </select>
                    </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <button class="btn btn-primary" >Submit form</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>