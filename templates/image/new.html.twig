<div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
    <div class="card">
        <div class="card-body">
            <form role="form" name="image" method ="post" action=" {{path('user_image_new',{'id': id})}}" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="inputUserName">Title</label>
                    <input id="image_title" name="image[title]" maxlength="50">
                    <input id="image_product" name="image[product]" value="{{ id }}">
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <div class="custom-file">
                                <input  type="file" id = "image_image" name = "image[image]">
                                <label for="exampleInputFile">Choose File</label>
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-6 pl-0">
                        <p class="text-right">
                            <button type="submit" class="btn btn-space btn-primary">Submit</button>
                            <button class="btn btn-space btn-secondary">Cancel</button>
                        </p>
                    </div>
                </div>
            </form>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for image in images %}
                    <tr>
                        <td>{{ image.id }}</td>
                        <td>{{ image.title }}</td>
                        <td><img src="{{ asset('uploads/images') ~ image.image }}" height="60"></td>
                        <td>
                            <a href="{{ path('admin_image_show', {'id': image.id}) }}">show</a>
                            <a href="{{ path('admin_image_edit', {'id': image.id}) }}">edit</a>
                        </td>
                        <td>
                            <form method="post" action="{{ path('user_image_delete', {'id': image.id, 'pid': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
                                <button class="btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>