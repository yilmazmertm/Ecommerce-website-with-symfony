{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL, windowName, windowFeatures) {
            window.open(windowURL,windowName, windowFeatures);
        }
    </SCRIPT>
<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">

                {{ include('user/usermenu.html.twig') }}

            </div>
            <div class="col-sm-9">
                <div class="blog-post-area">
                    <h2 class="title text-center">User Comments</h2>
                    <div class="single-blog-post">
                        <a href="{{ path('user_product_new') }}" class="btn btn-space btn-primary" >Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Keywords</th>
            <th>Description</th>
            <th>Image</th>
            <th>Price</th>
            <th>Owner</th>
            <th>Gallery</th>
            <th>Status</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{product.category}} </td>
                <td nowrap>{{ product.title }}</td>
                <td>{{ product.keywords }}</td>
                <td>{{ product.description }}</td>
                <td><img src = "{{asset('uploads/images/' ~ product.image)}}" height="30" style="width: 30px"></td>
                <td>{{ product.price }}</td>
                <td>{{ product.owner }}</td>
                <td>
                    <a href="javascript:openWin('{{ path('user_image_new', {'id': product.id}) }}','','toolbar = no, location = no, directories = no, status = no, top =50 ,left =100,menuBar = no, scrollBars = yes, resizable = no, width = 900, height = 600');">
                        <img src="{{ asset('assets/admin/img/gallery2.png') }}" height="30" style="width: 30px" >
                    </a>
                </td>
                <td>{{ product.status }}</td>

                <td>
                    <a href="{{ path('user_product_show', {'id': product.id}) }}" class="btn btn-space btn-primary">Show</a>
                </td>
                <td>
                    <a href="{{ path('user_product_edit', {'id': product.id}) }}" class="btn btn-space btn-primary">Edit</a>
                </td>
                <td>
                    {{ include('admin/product/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                    </div>
                </div>
</section><!--/blog-post-area-->
{% endblock %}

